{
  "name": "ma-consulting-website",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["apps/*"],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
  "dev": "concurrently \"npm run dev --workspace=apps/web\" \"npm run dev --workspace=apps/api\"",
  "build": "npm --workspace=web run build",
  "build:web": "npm --workspace=web run build",
  "start": "npm --workspace=api run start",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prisma": "^5.0.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0"
  }
}